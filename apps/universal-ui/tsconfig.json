{
    "extends": ["../../tsconfig.base.json", "expo/tsconfig.base"],
    "compilerOptions": {
        "strict": true,
        "declaration": true,
        "declarationMap": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "sourceMap": true,
        "noEmit": true,
        "paths": {
            "@modules/*": [
                "./src/modules/*"
            ],
            "@assets/*": [
                "./src/assets/*"
            ]
        },
        "types": ["vitest/globals", "vitest/jsdom"]
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.json",
        ".expo/types/**/*.ts",
        "expo-env.d.ts",
    ]
}
