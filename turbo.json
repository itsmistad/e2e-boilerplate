{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"]
        },
        "clean": {},
        "lint": {
            "dependsOn": ["^lint"]
        },
        "lint:fix": {
            "dependsOn": ["^lint:fix"]
        },
        "tsc": {
            "dependsOn": ["^tsc"]
        },
        "knip": {
            "dependsOn": ["^knip"]
        },
        "test": {
            "dependsOn": ["^test"]
        },
        "start": {
            "persistent": true,
            "cache": false
        }
    }
}
